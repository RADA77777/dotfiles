;;;;;;;;;;;;;
;; LAYOUTS ;;
;;;;;;;;;;;;;


[module/cpu]
type = internal/cpu
interval = 1
format-foreground = ${colors.foreground}
format-padding = 2
format-prefix = " | "
format = <label>
label = CPU cores: %percentage-cores%

[module/memory]
type = internal/memory
interval = 1
format-foreground = ${colors.foreground}
format-padding = 2
format-prefix = " | "
format-underline = #4bffdc
label = RAM used: %percentage_used%%
label-padding = 2
