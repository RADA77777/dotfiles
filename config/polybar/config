modules-left = i3
modules-right = diskhome diskroot cpu memory hour date
;modules-right = diskhome diskroot cpu memory weather hour date

cursor-click = pointer
cursor-scroll = ns-resize


;;;;;;;;;;;;;
;; MODULES ;;
;;;;;;;;;;;;;


[module/diskroot]
type = custom/script
interval = 90

exec = ~/.config/polybar/bar-hdd.sh 1 "/"
format-prefix = " | "
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 2
click-left = bar-disk 2
click-right = bar-disk 3


[module/diskhome]
type = custom/script
interval = 90
format-prefix = " | "
format-padding = 2
exec = ~/.config/polybar/bar-ssd.sh 1 /home
format-foreground = ${colors.foreground}
format-background = ${colors.background}


[module/weather]
type = custom/script
format-prefix = " | "
format-padding = 2
exec = ~/.config/polybar/weather.sh
interval = 2000


;;;;;;;;;;;;;
;; XWINDOW ;;
;;;;;;;;;;;;;
[module/xwindow]
type = internal/xwindow
label = %title%
label-empty = 
label-maxlen = 100
format-foreground = ${colors.foreground}
format-padding = 4
;format-prefix = 
;format-prefix-padding = 4
;format-prefix-foreground = ${xrdb:color3}


;;;;;;;;;;
;; TIME ;;
;;;;;;;;;;
[module/hour]
type = internal/date
interval = 1
date = %H:%M:%S %p
format = <label>
format-prefix = " | "
format-padding = 2
format-background = ${colors.background}
format-foreground = ${colors.foreground}
label = "%date%"
label-padding = 2

;;;;;;;;;;;
;;  DATE ;;
;;;;;;;;;;;
[module/date]
type = internal/date
interval = 1
format-foreground = ${colors.foreground}
format-prefix = " | "
format-padding = 2
format-background = ${colors.background}
date = %a, %d %b %Y%
format = <label>
label = "%date%"
label-padding = 2


