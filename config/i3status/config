general {
		output_format = "i3bar"
		colors = false	
		interval = 1
}

order += "wireless wlp0s20f0u14"
order += "memory"
order += "disk /home"
order += "tztime local"


wireless wlp0s20f0u14 {
		format_up = "Connected to %essid at %quality   ip = %ip"
		format_down = "Down"
}

memory {
		format = "%used RAM used"
		threshold_degraded = "10%"
        format_degraded = "%free RAM used"
}

disk "/home" {
		format = "/home = %free free"
}

tztime local{
		format = "%d-%m-%Y %H:%M:%S"
}
